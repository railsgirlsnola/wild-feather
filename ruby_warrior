-- Allyson --
class Player
  def play_turn(warrior)
    minHealth = 15
    @health ||= warrior.health
    if warrior.feel.empty?
      if (warrior.health < minHealth ) && (warrior.health >= @health)
         warrior.rest!
      else
        warrior.walk!
      end
    else
      warrior.attack!
    end
    @health=warrior.health
   end
end

-- Federico --


class Player
  def play_turn(warrior)
    if warrior.feel.empty? 
      warrior.walk!
    else warrior.attack!
  end
end


